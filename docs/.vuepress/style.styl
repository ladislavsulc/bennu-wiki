$accentColor = #710FDE

body
    font-size: 18px;
    @media (max-width: 719px)
        font-size: 16px;


/* Headings */
h1, h2, h3, h4, h5
    font-weight: 400

h2
    color: #111111

h3
    color: #222222

h2:not(.home h2)
h3
    font-weight: 600

h4
.uk-h4
blockquote
    color: #777777

em
    color: $accentColor

/* Link */
.uk-link-text a:hover
a.uk-link-text:hover
    color: #111111



/* Hero */
.home .hero h1
    margin-bottom 0

.home .hero img
    max-height: 100px
    margin: 7rem auto 1.5rem

.home .hero .description
    margin: 0.5rem auto 3rem
    max-width 40rem

.home .features
    border-top: none

.home .hero .action-button
    border-radius: 5px;
    padding: 0.5rem 2rem
    text-transform uppercase
    font-weight 400

    &:hover
        text-decoration: none 

.home h2
.home .footer
    border-bottom 0
    border-top 0

.wide-container .content:not(.custom)
    max-width: 1170px

.nav-item a:hover
    text-decoration: none


/* FOOTER */
.footer
    font-size: 14px


/* Table */
tr,
th,
td
    border: none

.uk-table-hover tbody tr:hover,
.uk-table-hover>tr:hover
    background: #f7f7f7

tr:nth-child(2n)
    background-color: #fff


/* Buttons */
.uk-button
    border-radius: 5px


